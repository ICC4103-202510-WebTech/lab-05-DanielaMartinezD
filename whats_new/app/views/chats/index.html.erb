<div class="container">
  <h1 class="text-center text-dark">Chats</h1>

  <table class="table table-info table-striped">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Records</th>
        <th>Chat</th>
      </tr>
    </thead>
    <tbody>
      <% @chats.each do |chat| %>
        <tr>
          <td><%= chat.id %></td>
          <td><%= chat.sender.email %></td>
          <td><%= chat.receiver.email %></td>
          <td><%= chat.created_at.strftime("%d %b %Y %H:%M")  %></td>
          <td><%= chat.updated_at.strftime("%d %b %Y %H:%M")  %></td>
          <td><%= link_to "View", chat_path(chat), class: "btn btn-sm btn-light" %></td>
          <td><%= link_to "Edit", edit_chat_path(chat), class: "btn btn-sm btn-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add new chat", new_chat_path, class: "btn btn-dark" %>
</div>
