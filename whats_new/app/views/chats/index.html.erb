<div class="container">
  <h1 class="text-center text-dark">Chats</h1>

  <table class="table table-info table-striped">
    <thead class="table-dark">
      <tr>
        <th>Chat ID</th>
        <th>Receiver</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Records</th>
      </tr>
    </thead>
    <tbody>
      <% @chats.each do |chat| %>
        <tr>
          <td><%= chat.id %></td>
          <td><%= chat.other_participant(current_user).full_name %></td>
          <td><%= chat.created_at.strftime("%d %b %Y %H:%M")  %></td>
          <td><%= chat.updated_at.strftime("%d %b %Y %H:%M")  %></td>
          <td><%= link_to "View", chat_path(chat), class: "btn btn-sm btn-light" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New Chat", new_chat_path, class: "btn btn-dark" %>
</div>
