<div class="container">
  <h1 class="text-center text-dark">Messages Records</h1>

  <div class="card shadow p-3 mb-4 bg-body rounded">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Chat ID:</strong> <%= @message.chat_id %></li>
      <li class="list-group-item"><strong>Sender:</strong> <%= @message.user.email %></li>
      <li class="list-group-item"><strong>Receiver:</strong> <%= @message.chat.receiver.email %></li>
      <li class="list-group-item"><strong>Body:</strong> <%= @message.body %></li>
      <li class="list-group-item"><strong>Created at:</strong> <%= @message.created_at.strftime("%d %b %Y %H:%M") %></li>
      <li class="list-group-item"><strong>Updated at:</strong> <%= @message.updated_at.strftime("%d %b %Y %H:%M") %></li>
    </ul>
  </div>

  <% if can? :create, Message.new(user_id: current_user.id) %>
    <%= link_to "New Message", new_message_path, class: "btn btn-dark" %>
  <% end %>
  <% if can? :edit, @message %>
    <%= link_to "Edit", edit_message_path(@message), class: "btn btn-dark" %>
  <% end %>
  <%= link_to "Back to messages", messages_path, class: "btn btn-info text-white" %>

</div>
